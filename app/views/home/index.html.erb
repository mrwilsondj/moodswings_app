      <div id="topLoader"> <!-- jquery animation loader begin -->

        <div class="row">
          <div class="col-lg-12">
            <form method="GET" action="/tweets">
              <input type="text" name="username" />
              <input type="submit" value="ANALYZE a friend" id="animateButton" class="btn btn-primary type-blockquotes">

       <script>
        $(function() {
          var $topLoader = $("#topLoader").percentageLoader({width: 256, height: 256, controllable : true, progress : 0, onProgressUpdate : function(val) {
              $topLoader.setValue(Math.round(val * 100.0));
            }});

          var topLoaderRunning = false;
          $("#animateButton").click(function() {
            if (topLoaderRunning) {
              return;
            }
            topLoaderRunning = true;
            $topLoader.setProgress(0);
            $topLoader.setValue('0kb');
            var kb = 0;
            var totalKb = 999;

            var animateFunc = function() {
              kb += 17;
              $topLoader.setProgress(kb / totalKb);
              $topLoader.setValue(kb.toString() + 'kb');

              if (kb < totalKb) {
                setTimeout(animateFunc, 25);
              } else {
                topLoaderRunning = false;
              }
            }

            setTimeout(animateFunc, 25);

          });
        });
      </script>
      </div>



